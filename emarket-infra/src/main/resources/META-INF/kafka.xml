<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
        xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                  http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
        version="2.1"
>
    <access>FIELD</access>
    <entity class="com.demo.web.emarket.infra.async.send.SentMsgConainer">
        <table name="SENT_MSG_CONTAINER"/>
        <attributes>
            <id name="id">
                <column name="ID"/>
            </id>
            <basic name="transactionId">
                <column name="TRANSACTION_ID"/>
            </basic>
            <basic name="msgType">
                <column name="MSG_TYPE"/>
            </basic>
            <basic name="jsonSerializedMsg">
                <column name="JSON_SERIALIZED_MSG"/>
            </basic>
            <basic name="creationTime">
                <column name="CREATION_TIME"/>
            </basic>
            <basic name="status">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="topic">
                <column name="TOPIC"/>
            </basic>
            <basic name="originMessage">
                <column name="ORIGIN_MESSAGE"/>
            </basic>
            <basic name="blockTime">
                <column name="BLOCK_TIME"/>
            </basic>
            <basic name="versionSchema">
                <column name="VERSION_SCHEMA"/>
            </basic>
            <basic name="idUtilisateur">
                <column name="ID_UTILISATEUR"/>
            </basic>
            <basic name="idObjet">
                <column name="ID_OBJET"/>
            </basic>
            <basic name="numVersionObjet">
                <column name="NUM_VERSION_OBJET"/>
            </basic>
        </attributes>
    </entity>

    <entity class="com.demo.web.emarket.infra.async.receive.ReceivedUlt">
        <table name="RECEIVED_ULT"/>
        <attributes>
            <embedded-id name="id"/>
            <basic name="ulid">
                <column name="ULID"/>
            </basic>
            <basic name="retriesNo">
                <column name="RETRIES_NO"/>
            </basic>
            <basic name="ts">
                <column name="TS"/>
            </basic>
            <basic name="msgOffset">
                <column name="MSG_OFFSET"/>
            </basic>
        </attributes>
    </entity>

    <embeddable class="com.demo.web.emarket.infra.async.receive.ReceivedUltId">
        <attributes>
            <basic name="topic">
                <column name="TOPIC"/>
            </basic>
            <basic name="partition">
                <column name="PARTITION"/>
            </basic>
        </attributes>
    </embeddable>

</entity-mappings>
